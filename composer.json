{
    "name": "dt_work/games-admin",
    "type": "project",
    "keywords": [
        "mineadmin",
        "swoole",
        "hyperf",
        "crud",
        "fast",
        "developer",
        "admin",
        "app store"
    ],
    "description": "games-admin",
    "license": "Apache-2.0",
    "require": {
        "php": ">=8.1",
        "mineadmin/app-store": "~2.0",
        "xmo/jwt-auth": "~2.0",
        "xmo/mine-core": "~2.0",
        "xmo/mine-generator": "~2.0",
        "xmo/mine-helpers": "~2.0",
        "xmo/mine-office": "~2.0",
        "xmo/mine-service": "~2.0",
        "xmo/mine-translatable": "~2.0",
      "ext-bcmath": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "hyperf/devtool": "3.1.*",
        "hyperf/ide-helper": "3.1.*",
        "hyperf/testing": "3.1.*",
        "hyperf/watcher": "3.1.*",
        "mockery/mockery": "^1.0",
        "pestphp/pest": "^2.33",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.10",
        "swoole/ide-helper": "^5.0",
        "zircote/swagger-php": "4.8.0"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Api\\": "api/"
        },
        "files": [
            "common/common.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTests\\": "./tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('env/.env.local', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "mv -f .env .env.back; cp env/.env.testing .env ; co-phpunit --prepend test/bootstrap.php -c phpunit.xml --colors=always ; mv -f .env.back .env",
        "coverage": "pest --coverage --coverage-clover tests/coverage.xml ",
        "cs-fix": "phpcbf --standard=phpcs.xml --colors app/ && php-cs-fixer fix $1",
        "cs": "phpcs --standard=phpcs.xml --colors app/",
        "analyse": [
            "Composer\\Config::disableProcessTimeout",
            "phpstan analyse --memory-limit 500M -l 0 -c phpstan.neon ./app ./config ./api ./common"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "php ./bin/hyperf.php start"
        ]
    }
}
